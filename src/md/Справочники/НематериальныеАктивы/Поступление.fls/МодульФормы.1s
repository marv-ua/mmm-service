Процедура ПриОткрытии() //предопределенная
	
	Если ПустоеЗначение(Форма.Параметр) = 0 Тогда
		Фильтр = Форма.Параметр;
	    Если Фильтр = "НИОКР" Тогда
			УстановитьОтбор("ВидОбъектаУчета",1);
			
		ИначеЕсли Фильтр = "НМА" Тогда
	        УстановитьОтбор("ВидОбъектаУчета",0);
	    КонецЕсли;
	КонецЕсли;
	РедактироватьВДиалоге(0,0);
	
КонецПроцедуры //ПриОткрытии
