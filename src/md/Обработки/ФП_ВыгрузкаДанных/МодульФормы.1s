	ЗагрузитьПравилаКонвертации();
	

	//ФормДатаНач								=	РабочаяДата();
	//ФормДатаКон								=	РабочаяДата();
	
	
	ФормКолвоБуферизуемыхОбъектов			=	50;
	ФормФлЗапоминатьСсылки					=	1;
	
	
